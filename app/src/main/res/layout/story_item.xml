<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/story_item"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="5dp"
    app:contentPadding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/story_item_imageview"
            android:adjustViewBounds="true"
            tools:src="@drawable/placeholder"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/story_item_title"
            tools:text="Heading"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:padding="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                tools:text="By line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/story_item_byline"
                android:layout_weight="1" />

            <TextView
                tools:text="Oct 6, 2016"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/story_item_date"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/story_item_trailing_text"
            tools:text="Display the details here. Maximum two lines such as not to create a discrepency in the images."
            android:maxLines="2"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    </LinearLayout>

</android.support.v7.widget.CardView>